@model CategoryViewModel
@{ }
@*MVC 6 Coding Example -- Ritesh Pahwa 9/5/15*@
<h2>@ViewBag.EntityTitle - @ViewBag.Title</h2>

@{await Html.RenderPartialAsync("_Alerts"); }

<form class="form-horizontal" method="post" asp-antiforgery="true">
    <div class="row"><div asp-validation-summary="ValidationSummary.All" class="text-danger col-sm-12"></div></div>
    <div class="form-group">
        <input asp-for="Id" type="hidden" />
        <input asp-for="RowStamp" type="hidden" />
        <input asp-for="CreatedByName" type="hidden" />
        <input asp-for="ModifiedByName" type="hidden" />
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Slug" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Slug" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ParentCategoryId" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="ParentCategoryId" asp-items="ViewBag.Categories"><option value=""> - Select - </option></select>
            <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
        </div>
    </div>
    @{ await Html.RenderPartialAsync("_ModelUpdateInfo");}
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input class="btn btn-primary" type="submit" value="Save" />
        </div>
    </div>
</form>
<hr />
<p><a class="btn btn-info" asp-route-area="Admin" asp-controller="Category" asp-action="Index"><i class="fa fa-arrow-left"></i> Back to List</a></p>
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script src="~/js/slug.js"></script>
    <script src="~/js/lengthCounter.js"></script>
    <script>
        $(function () { $('#Name').toSlug({slugElement:'#Slug'}); });
        $(function () { $('form input[data-val-length-max]').showCharacterCount(); });
    </script>
}