@model UserViewModel
@{ }
@*MVC 6 Coding Example -- Ritesh Pahwa 9/10/15*@
@section head{
    <link href="~/lib/select2/dist/css/select2.min.css" rel="stylesheet" />
}
<h2>@ViewBag.EntityTitle - @ViewBag.Title</h2>
@{await Html.RenderPartialAsync("_Alerts"); }

<div class="row">
    <div class="col-md-8">
        <form class="form-horizontal" method="post" asp-antiforgery="true">
            <div class="row"><div asp-validation-summary="ValidationSummary.All" class="text-danger col-md-12"></div></div>
            <input asp-for="Id" type="hidden" />
            <div class="form-group">
                <label asp-for="FullName" class="col-sm-2 control-label"></label><div class="col-sm-10"><input class="form-control" asp-for="FullName" /><span asp-validation-for="FullName" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-sm-2 control-label"></label><div class="col-sm-10"><input class="form-control" asp-for="Email" /><span asp-validation-for="Email" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="Activated" class="col-sm-2 control-label"></label><div class="col-sm-10"><input class="form-control" asp-for="Activated" /><span asp-validation-for="Activated" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="EmailConfirmed" class="col-sm-2 control-label"></label><div class="col-sm-10"><input class="form-control" asp-for="EmailConfirmed" /><span asp-validation-for="EmailConfirmed" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="AccessFailedCount" class="col-sm-2 control-label"></label><div class="col-sm-10"><input class="form-control" asp-for="AccessFailedCount" /><span asp-validation-for="AccessFailedCount" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="LockoutEnabled" class="col-sm-2 control-label"></label><div class="col-sm-10"><input class="form-control" asp-for="LockoutEnabled" /><span asp-validation-for="LockoutEnabled" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="TwoFactorEnabled" class="col-sm-2 control-label"></label><div class="col-sm-10"><input class="form-control" asp-for="TwoFactorEnabled" /><span asp-validation-for="TwoFactorEnabled" class="text-danger"></span></div>
                <hr />
                <label asp-for="UserRoles" class="col-sm-2 control-label"></label><div class="col-sm-10"><select asp-for="UserRoles" multiple="multiple" asp-items="ViewBag.Roles" class="col-md-6" data-placeholder="Assign Roles"></select><span asp-validation-for="TwoFactorEnabled" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input class="btn btn-primary" type="submit" value="Save" />
                </div>
            </div>
        </form>
    </div>
</div>
<hr />
<p><a class="btn btn-info" asp-route-area="Admin" asp-controller="User" asp-action="Index"><i class="fa fa-arrow-left"></i> Back to List</a></p>
@section scripts {
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")"></script>
    <script src="~/lib/select2/dist/js/select2.min.js"></script>
    <script src="~/js/lengthCounter.js"></script>
    <script>
        $(function () { $("#UserRoles").select2();});
        $(function () { $('form input[data-val-length-max]').showCharacterCount(); });
    </script>
}